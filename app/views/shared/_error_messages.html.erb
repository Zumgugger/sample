
<% if @user.errors.any? %>
  <div id="error_explanation">
  	<h2>
  		<%= pluralize(@user.errors.count, "error")%>
  		prohibited this user from being saved:
  	</h2>
  	<p>
  		There were problems in the following fields:
  		<% @user.errors.full_messages.each do |message| %>
  			<ul>
  				<li><%= message %></li>
  			</ul>
  		<%end%>
  	</p>
  	
  </div>		
	
<%end%>
